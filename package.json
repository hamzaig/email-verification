{
  "name": "email-verification-api",
  "version": "1.0.0",
  "description": "Production-ready API for email verification and enrichment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "build": "cd client && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "queue:worker": "node workers/queue-worker.js",
    "queue:monitor": "node scripts/queue-monitor.js"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@promster/express": "^7.0.5",
    "@promster/server": "^7.0.5",
    "@sentry/node": "^7.36.0",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.4",
    "compression": "^1.7.4",
    "connect-datadog": "^0.0.6",
    "cors": "^2.8.5",
    "dns2": "^2.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-slow-down": "^1.5.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "net": "^1.0.2",
    "nodemailer": "^6.10.1",
    "prom-client": "^14.2.0",
    "punycode": "^2.3.1",
    "redis": "^4.6.5",
    "stripe": "^11.14.0",
    "uuid": "^9.0.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0",
    "winston-slack-webhook-transport": "^2.2.3",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.21",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/email-verification-api.git"
  },
  "keywords": [
    "email",
    "verification",
    "api",
    "validation",
    "smtp",
    "dns",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/email-verification-api/issues"
  },
  "homepage": "https://github.com/yourusername/email-verification-api#readme"
}
